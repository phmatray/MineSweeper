@* Molecule: DifficultyButton - Button for selecting game difficulty *@

<button @onclick="OnClick"
        class="difficulty-button @(IsSelected ? "selected" : "") @GetColorClass()">
    <div class="flex items-center gap-2">
        <span class="text-2xl">@Icon</span>
        <div class="text-left">
            <div class="font-bold text-lg">@DifficultyName</div>
            <div class="text-sm opacity-90">@GridSize</div>
            <div class="text-xs opacity-75">@MineCount mines</div>
        </div>
    </div>
</button>