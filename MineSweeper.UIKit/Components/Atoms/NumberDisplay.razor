@* Atom: NumberDisplay - Displays numbers with color coding (for mine counts) *@

<span class="@GetNumberClass()">@Number</span>

@code {
    [Parameter] public int Number { get; set; }
    [Parameter] public string? AdditionalClasses { get; set; }

    private string GetNumberClass()
    {
        var colorClass = Number switch
        {
            1 => "text-blue-400",
            2 => "text-green-400",
            3 => "text-red-400",
            4 => "text-purple-400",
            5 => "text-yellow-400",
            6 => "text-pink-400",
            7 => "text-gray-300",
            8 => "text-gray-100",
            _ => "text-gray-400"
        };

        if (!string.IsNullOrEmpty(AdditionalClasses))
        {
            colorClass += " " + AdditionalClasses;
        }

        return colorClass;
    }
}
