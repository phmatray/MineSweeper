@inherits LayoutComponentBase

<div class="min-h-screen bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900">
    <nav class="bg-gray-900 shadow-lg border-b border-gray-700">
        <div class="max-w-7xl mx-auto px-4">
            <div class="flex justify-between items-center h-16">
                <div class="flex items-center gap-8">
                    <a href="/" class="flex items-center gap-2 text-white hover:text-gray-300 transition-colors">
                        <span class="text-2xl">💣</span>
                        <span class="font-bold text-xl">MineSweeper</span>
                    </a>
                    
                    <div class="hidden md:flex items-center gap-6">
                        <NavLink href="/" Match="NavLinkMatch.All" class="flex items-center gap-2 px-3 py-2 rounded-lg text-gray-300 hover:text-white hover:bg-gray-800 transition-all">
                            <span class="text-lg">🎮</span>
                            <span>Play</span>
                        </NavLink>
                        <NavLink href="/stats" class="flex items-center gap-2 px-3 py-2 rounded-lg text-gray-300 hover:text-white hover:bg-gray-800 transition-all">
                            <span class="text-lg">📊</span>
                            <span>Statistics</span>
                        </NavLink>
                        <NavLink href="/achievements" class="flex items-center gap-2 px-3 py-2 rounded-lg text-gray-300 hover:text-white hover:bg-gray-800 transition-all">
                            <span class="text-lg">🏆</span>
                            <span>Achievements</span>
                        </NavLink>
                    </div>
                </div>
                
                <div class="md:hidden">
                    <button @onclick="ToggleMobileMenu" class="text-white p-2">
                        <span class="text-2xl">☰</span>
                    </button>
                </div>
            </div>
            
            @if (_showMobileMenu)
            {
                <div class="md:hidden pb-4 space-y-2">
                    <NavLink href="/" Match="NavLinkMatch.All" class="flex items-center gap-2 px-3 py-2 rounded-lg text-gray-300 hover:text-white hover:bg-gray-800 transition-all w-full" @onclick="CloseMobileMenu">
                        <span class="text-lg">🎮</span>
                        <span>Play</span>
                    </NavLink>
                    <NavLink href="/stats" class="flex items-center gap-2 px-3 py-2 rounded-lg text-gray-300 hover:text-white hover:bg-gray-800 transition-all w-full" @onclick="CloseMobileMenu">
                        <span class="text-lg">📊</span>
                        <span>Statistics</span>
                    </NavLink>
                    <NavLink href="/achievements" class="flex items-center gap-2 px-3 py-2 rounded-lg text-gray-300 hover:text-white hover:bg-gray-800 transition-all w-full" @onclick="CloseMobileMenu">
                        <span class="text-lg">🏆</span>
                        <span>Achievements</span>
                    </NavLink>
                </div>
            }
        </div>
    </nav>
    
    <main>
        @Body
    </main>
</div>

@code {
    private bool _showMobileMenu = false;
    
    private void ToggleMobileMenu()
    {
        _showMobileMenu = !_showMobileMenu;
    }
    
    private void CloseMobileMenu()
    {
        _showMobileMenu = false;
    }
}